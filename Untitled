    radial-gradient(at 0% 0%, hsla(211, 96%, 48%, 1) 0, transparent 50%),
    radial-gradient(at 50% 0%, hsla(208, 80%, 55%, 1) 0, transparent 50%),
    radial-gradient(at 100% 0%, hsla(211, 96%, 30%, 1) 0, transparent 50%);
  z-index: 0;
  animation: meshPulse 8s ease-in-out infinite alternate;
}

@keyframes meshPulse {
  0% {
    transform: scale(1);
    filter: hue-rotate(0deg);
  }

  100% {
    transform: scale(1.1);
    filter: hue-rotate(10deg);
  }
