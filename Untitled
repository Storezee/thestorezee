    /* Readable text */
    white-space: nowrap;
  }

  /* 3. Hero Section Alignment */
  .hero {
    padding-top: 110px;
    text-align: center;
    overflow: hidden;
    /* Prevents 3D image from breaking width */
  }

  .hero-title {
    font-size: 2.4rem !important;
    line-height: 1.2;
    padding: 0 10px;
  }

  /* 4. CONTACT SECTION FIX (The Main Issue) */
  .contact-section {
    padding: 40px 0 !important;
    width: 100% !important;
  }

  .container {
    padding-left: 15px !important;
    padding-right: 15px !important;
    width: 100% !important;
    box-sizing: border-box;
  }

  /* Force the Grid to become a Single Column */
  .contact-wrapper {
    display: flex !important;
    flex-direction: column;
    /* Stack vertically */
    width: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
    box-shadow: none !important;
    /* Remove shadow on mobile for cleaner look */
    background: transparent !important;
  }

  /* Align the Info Cards (Email, Call, Location) */
  .contact-info {
    width: 100% !important;
    padding: 0 0 30px 0 !important;
    background: transparent !important;
  }

  .info-item {
    width: 100% !important;
    box-sizing: border-box !important;
    /* Prevents padding from adding width */
    margin-bottom: 15px;
  }

  /* Align the Form */
  .contact-form {
    width: 100% !important;
    padding: 25px 20px !important;
    /* Comfortable internal padding */
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    /* Add shadow back to form only */
    box-sizing: border-box !important;
  }

  /* Fix Inputs from overflowing */
  .contact-form input,
  .contact-form textarea,
  .contact-form button {
    width: 100% !important;
    max-width: 100% !important;
